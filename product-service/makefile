#*============================================================================*#
#*=====*                          Generate GRPC                         *=====*#
#*============================================================================*#
.PHONY:protobuf-gen

protobuf-gen:
	@cd proto && buf generate

#*============================================================================*#
#*=====*                          Run Server                            *=====*#
#*============================================================================*#
.PHONY:local-serve

local-serve:
	@go run . serve

#*============================================================================*#
#*=====*                           Dev Docker                           *=====*#
#*============================================================================*#
.PHONY: docker-side

docker-side:
	@docker compose --profile side up